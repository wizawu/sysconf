#!/bin/bash

set -ex
test -n "$1"

WORKSPACE=$(cd $1 && pwd)

docker run --rm -it \
    --user $(id -u):$(id -g) \
    -v /etc/passwd:/etc/passwd:ro \
    -v /etc/group:/etc/group:ro \
    -v /home/wizawu/.kimi:/root/.kimi \
    -v $WORKSPACE:$WORKSPACE \
    -w $WORKSPACE \
    wizawu/agent:latest kimi
