#!/bin/bash

PERLLIB=$(cd $(dirname $0)/../dotfiles/urxvt && pwd)
EN_FONT=$(test -n "$xft" && echo "$xft" || echo "Courier Prime Code")

pkill xfce4-panel
/usr/bin/urxvt \
    --perl-lib $PERLLIB -pe newterm \
    -lsp 7 -letsp -2 \
    -fn "xft:$EN_FONT:size=11,xft:造字工房典黑（非商用）:size=9" \
    $@ \
    -e bash
