#!/bin/sh

set -ex

if [ "$1" = pause ]; then
    sudo VBoxManage controlvm wxwork savestate
elif [ "$1" = reset ]; then
    sudo VBoxManage controlvm wxwork reset
elif [ "$1" = off ]; then
    sudo VBoxManage controlvm wxwork poweroff
else
    sudo env QT_QPA_PLATFORMTHEME=qt5ct VBoxManage startvm wxwork --type gui
fi
