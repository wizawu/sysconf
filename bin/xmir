#!/bin/bash

set -ex
if [ $(xrandr | grep -w connected | wc -l) -gt 1 ]; then
    monitor1=$(xrandr | grep -w connected | awk 'NR==1{print $1}')
    monitor2=$(xrandr | grep -w connected | awk 'NR==2{print $1}')
    if [ "$1" == "1" ]; then
        xrandr --output $monitor1 --auto
        xrandr --output $monitor2 --off
    elif [ "$1" == "2" ]; then
        xrandr --output $monitor1 --off
        xrandr --output $monitor2 --auto --mode 2560x1440
    else
        xrandr --output $monitor1 --same-as $monitor2
        xrandr --output $monitor1 --auto
        xrandr --output $monitor2 --auto
    fi
else
    monitor1=$(xrandr | grep -w connected | awk 'NR==1{print $1}')
    xrandr --output $monitor1 --auto
fi
