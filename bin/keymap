#!/bin/bash

# reset
setxkbmap -layout us

# dvorak
# setxkbmap dvorak

# map Alt_R to grave
xmodmap -e "keycode 108 = grave"

# map Ctrl_R to asciitilde
xmodmap -e "keycode 105 = asciitilde"

