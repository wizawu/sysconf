#!/bin/bash

set -ex

[[ `fc-match -s Test` = `fc-match sans`*HYQiHei* ]]
[[ `fc-match Arial` = `fc-match sans` ]]
[[ `fc-match Consolas` = *Consolas* ]]
[[ `fc-match Courier` = *Courier* ]]
[[ `fc-match Lato` = *Lato* ]]
[[ `fc-match Menlo` = `fc-match monospace` ]]
[[ `fc-match monospace` = *Courier\ Prime\ Code* ]]
[[ `fc-match sans` != `fc-match monospace` ]]

echo OK
