#!/usr/bin/env node

const action = process.argv[2]
if (!action) {
    console.error(`Usage: rmbat "name = name.replace(' ', '-')"`)
    process.exit(1)
}

const fs = require("fs")
fs.readdirSync(".").forEach(name => {
    let oldName = name
    eval(action)
    fs.rename(oldName, name, () => console.log(oldName + " -> " + name))
})
