#!/bin/sh
export LC_CTYPE="zh_CN.UTF-8"
export XMODIFIERS="@im=fcitx"
export QT_IM_MODULE=fcitx
export GTK_IM_MODULE=fcitx

im-config -l
im-config -o fcitx
im-config -n fcitx

echo "DESKTOP DOWNLOAD TEMPLATES PUBLICSHARE DOCUMENTS MUSIC PICTURES VIDEOS" \
    | xargs -I {} xdg-user-dirs-update --set {} ~

xset -b
xset -dpms
xset s noblank
xset s off

(mate-session 2>/dev/null) &
(sleep 5 && pkill mate-maximus) &
(sleep 5 && pkill nm-applet) &
(sleep 5 && fcitx -d) &

awesome
