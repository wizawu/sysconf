#!/bin/sh
sudo ip l set wlp1s0 name wlan0

export LC_CTYPE="zh_CN.UTF-8"
export XMODIFIERS="@im=fcitx"
export QT_IM_MODULE=fcitx
export GTK_IM_MODULE=fcitx

echo "DESKTOP DOWNLOAD TEMPLATES PUBLICSHARE DOCUMENTS MUSIC PICTURES VIDEOS" |xargs -I {} xdg-user-dirs-update --set {} ~

xset -b
xset -dpms
xset s noblank
xset s off

mate-session 2>/dev/null &
(sleep 2 && hsetroot -full /usr/share/awesome/themes/default/background.png) &
(sleep 2 && fcitx -d) &

awesome
