#!/bin/sh

export LC_CTYPE="zh_CN.UTF-8"
export XMODIFIERS="@im=xsunpinyin"
export GTK_IM_MODULE=xim
export QT_IM_MODULE=xim

echo "DESKTOP DOWNLOAD TEMPLATES PUBLICSHARE DOCUMENTS MUSIC PICTURES VIDEOS" |xargs -I {} xdg-user-dirs-update --set {} ~

xsunpinyin -d
xset -b
startxfce4 &

(sleep 4 && hsetroot -full /usr/share/awesome/themes/default/background.png) &
(sleep 4 && pkill xfce4-panel) &
(sleep 4 && pkill xscreensaver) &
(sleep 4 && synclient TapButton2=3) &

awesome
